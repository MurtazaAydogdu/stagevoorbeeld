{
    "meta": {
        "definitions": {
            "HOST_APP_NAME": "transaction_api",
            "HOST_API_VERSION": "2",
            "HOST_BASE_URL": "http://192.168.88.100:8000"
        }
    },
    "mappings": [
        {
            "from": {
                "rest": {
                    "endpoint": "/transaction/out/create",
                    "method": "POST"
                }
            },
            "to": {
                "rabbit": {
                    "routingKey": "{{HOST_APP_NAME}}.{{HOST_API_VERSION}}.event.transaction.created.success.*.~~query.origin~~"
                }
            }
        }
    ]
}