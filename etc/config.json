{
    "meta": {
        "definitions": {
            "HOST_APP_NAME": "transaction_api",
            "HOST_API_VERSION": "2",
            "HOST_BASE_URL": "http://192.168.88.100:8000"
        }
    },
    "mappings": [
        {
            "from": {
                "rest": {
                    "endpoint": "/state/create",
                    "method": "POST"
                }
            },
            "to": {
                "rabbit": {
                    "routingKey": "{{HOST_APP_NAME}}.{{HOST_API_VERSION}}.event.state.created.#.*.~~query.origin~~"
                }
            }
        },
        {
            "from": {
                "rest": {
                    "endpoint": "/state/edit/:id",
                    "method": "PATCH"
                }
            },
            "to": {
                "rabbit": {
                    "routingKey": "{{HOST_APP_NAME}}.{{HOST_API_VERSION}}.event.state.updated.#.*.~~query.origin~~"
                }
            }
        },
        {
            "from": {
                "rest": {
                    "endpoint": "/state/delete/:id",
                    "method": "DELETE"
                }
            },
            "to": {
                "rabbit": {
                    "routingKey": "{{HOST_APP_NAME}}.{{HOST_API_VERSION}}.event.state.deleted.#.*.~~query.origin~~"
                }
            }
        },
        {
            "from": {
                "rest": {
                    "endpoint": "/transaction/in/create",
                    "method": "POST"
                }
            },
            "to": {
                "rabbit": {
                    "routingKey": "{{HOST_APP_NAME}}.{{HOST_API_VERSION}}.event.transactionin.created.#.*.~~query.origin~~"
                }
            }
        },
        {
            "from": {
                "rest": {
                    "endpoint": "/transaction/in/edit/:id",
                    "method": "PATCH"
                }
            },
            "to": {
                "rabbit": {
                    "routingKey": "{{HOST_APP_NAME}}.{{HOST_API_VERSION}}.event.transactionin.updated.#.*.~~query.origin~~"
                }
            }
        },
        {
            "from": {
                "rest": {
                    "endpoint": "/transaction/in/delete/:id",
                    "method": "DELETE"
                }
            },
            "to": {
                "rabbit": {
                    "routingKey": "{{HOST_APP_NAME}}.{{HOST_API_VERSION}}.event.transactionin.deleted.#.*.~~query.origin~~"
                }
            }
        },
        {
            "from": {
                "rest": {
                    "endpoint": "/transaction/out/create",
                    "method": "POST"
                }
            },
            "to": {
                "rabbit": {
                    "routingKey": "{{HOST_APP_NAME}}.{{HOST_API_VERSION}}.event.transactionout.created.#.*.~~query.origin~~"
                }
            }
        },
        {
            "from": {
                "rest": {
                    "endpoint": "/transaction/out/edit/:id",
                    "method": "PATCH"
                }
            },
            "to": {
                "rabbit": {
                    "routingKey": "{{HOST_APP_NAME}}.{{HOST_API_VERSION}}.event.transactionout.updated.#.*.~~query.origin~~"
                }
            }
        },
        {
            "from": {
                "rest": {
                    "endpoint": "/transaction/out/delete/:id",
                    "method": "DELETE"
                }
            },
            "to": {
                "rabbit": {
                    "routingKey": "{{HOST_APP_NAME}}.{{HOST_API_VERSION}}.event.transactionout.deleted.#.*.~~query.origin~~"
                }
            }
        }
    ]
}